#lang racket
(require 2htdp/image)

(provide
 CANVAS-WIDTH
 CANVAS-HEIGHT
 CANVAS-HALF-WIDTH
 CANVAS-HALF-HEIGHT
 NEW-SBLOCK-EVENT
 EMPTY-CANVAS)

(define CANVAS-WIDTH 600)
(define CANVAS-HEIGHT 500)
(define CANVAS-HALF-WIDTH (/ CANVAS-WIDTH 2))
(define CANVAS-HALF-HEIGHT (/ CANVAS-HEIGHT 2))
(define NEW-SBLOCK-EVENT "b")
(define EMPTY-CANVAS (empty-scene CANVAS-WIDTH CANVAS-HEIGHT))